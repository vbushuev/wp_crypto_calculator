.-cc-container
    position: relative;
.calculator-container
    position: relative;
    display: block;
    width: 100%;
    border: solid 1px rgba(0,0,0,.5);
    border-radius: .6em;
    margin-bottom: 1em;
    .calculator-row-name
        font-weight: 600;
        position: absolute;
        bottom: 0;
        left:0;
        border-top-right-radius: .5em;
        padding: 0 1em;;

        border: none;
        background: #258C66;
        border-color: #258C66;
        width:55px;
    .calculator-col
        float: left;
        width: 33.3%;
        padding: 10px 10px;
        border-right: 1px solid #D4D4D4;
        border-top: 1px solid #D4D4D4;
        border-bottom: 2px solid #D4D4D4;
        text-align: right;
        div
            // padding:1em 0 .4em 0;
            margin-bottom: 1em;
        display: inline-block;
        .calculator-label
            // color: rgba(0,0,0,.5);
            color: rgba(255,255,255,1);
            font-size: 80%;
            font-weight: 100;
            background-color: #3CA07B;
        .calculator-value
            font-weight: 600;
